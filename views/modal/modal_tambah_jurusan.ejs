<form action="/kurikulum" method="post">
    <div class="pt-5 px-9 w-auto">
        <div class="border border-gray-300 rounded-lg px-9 py-7">
            <div class="mb-3 mr-5 pb-4">
                <h1 class="text-text_lg font-medium">Tambah Jurusan</h1>
            </div>
            <div class="mb-3 mr-5">
                <label for="jenis-pengisian-nilai" class="block text-text_sm font-medium">Jenis Studi</label>
                <select class="form-select appearance-none
                h-11 
                w-96
                block
                px-3
                py-1.5
                text-base
                font-normal
                text-text-base
                bg-white bg-clip-padding bg-no-repeat
                border border-solid border-gray-300
                focus:ring-primary-600
                transition
                ease-in-out
                m-0
                rounded-lg
                focus:text-text-base focus:bg-white focus:outline-none" id="jenis_studi" name="jenis_studi">
                    <option selected>Pilih jenis studi</option>
                    <option value="Reguler">Reguler</option>
                    <option value="Akselerasi">Akselerasi</option>
                </select>
            </div>
            <div class="mb-3 mr-5 pt-5">
                <label for="jenis-pengisian-nilai" class="block text-text_sm font-medium">Jurusan</label>
                <select class="form-select appearance-none
                h-11 
                w-96
                block
                px-3
                py-1.5
                text-base
                font-normal
                text-text-base
                bg-white bg-clip-padding bg-no-repeat
                border border-solid border-gray-300
                focus:ring-primary-600
                transition
                ease-in-out
                m-0
                rounded-lg
                focus:text-text-base focus:bg-white focus:outline-none" id="jurusan" name="jurusan">
                    <option selected>Pilih Jurusan</option>
                    <option value="MIPA">MIPA</option>
                    <option value="IPS">IPS</option>
                </select>
            </div>
            <div class="mb-3 mr-5 pt-5">
                <label for="jenis-pengisian-nilai" class="block text-text_sm font-medium">Semester</label>
                <select class="form-select appearance-none
                h-11 
                w-96
                block
                px-3
                py-1.5
                text-base
                font-normal
                text-text-base
                bg-white bg-clip-padding bg-no-repeat
                border border-solid border-gray-300
                focus:ring-primary-600
                transition
                ease-in-out
                m-0
                rounded-lg
                focus:text-text-base focus:bg-white focus:outline-none" id="semester" name="semester">
                    <option selected>Pilih Semester</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                </select>
            </div>
            <div class="mb-3 mr-5 pt-5">
                <label for="jenis-pengisian-nilai" class="block text-text_sm font-medium">Standar Kurikulum</label>
                <select class="form-select appearance-none
                h-11 
                w-96
                block
                px-3
                py-1.5
                text-base
                font-normal
                text-text-base
                bg-white bg-clip-padding bg-no-repeat
                border border-solid border-gray-300
                focus:ring-primary-600
                transition
                ease-in-out
                m-0
                rounded-lg
                focus:text-text-base focus:bg-white focus:outline-none" id="standar_kurikulum" name="standar_kurikulum">
                    <option selected>Pilih kurikulum</option>
                    <option value="K13">K13</option>
                    <option value="Kurikulum Merdeka">Kurikulum Merdeka</option>
                </select>
            </div>
            <div class="mb-3 mr-5 pt-5">
                <label for="jenis-pengisian-nilai" class="block text-text_sm font-medium">Skala Penilaian</label>
                <select class="form-select appearance-none
                h-11 
                w-96
                block
                px-3
                py-1.5
                text-base
                font-normal
                text-text-base
                bg-white bg-clip-padding bg-no-repeat
                border border-solid border-gray-300
                focus:ring-primary-600
                transition
                ease-in-out
                m-0
                rounded-lg
                focus:text-text-base focus:bg-white focus:outline-none" id="skala_penilaian" name="skala_penilaian">
                    <option selected>Pilih skala Penilaian</option>
                    <option value="100">100</option>
                    <option value="Huruf">Huruf</option>
                </select>
            </div>
            <div class="pt-5 px-9 flex justify-end">
                <button type="submit" class="bg-primary-600 text-white text-text_md rounded-lg text-center inline-flex items-center px-5 py-3">
                    <!-- <img src="/assets/plus.png" alt="" class=" flex w-5 h-5"> -->
                    Tambah</button>
            </div>
        </div>
    </div>
</form>