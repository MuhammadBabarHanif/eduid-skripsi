<form action="/kurikulum/tambah_mata_pelajaran?_method=PUT" method="post">
    <input type="hidden" name="_id" value="<%= dataJurusan._id %>"/>
    <div class="pt-5 px-9">
        <div class="border border-gray-300 rounded-lg px-9 py-7">
            <div class="mb-3 mr-5 pb-4">
                <h1 class="text-text_lg font-medium">Tambah Jurusan</h1>
            </div>
            <div class="mb-3 mr-5">
                <label for="mata_pelajaran" class="block text-text_sm font-medium">Mata Pelajaran</label>
                <input type="text" placeholder="Masukkan nama mata pelajaran" class="h-11 w-96 rounded-lg ring-gray-300 focus:ring-primary-600" id="namaMataPelajaran" name="namaMataPelajaran" required>
            </div>
            <div class="mb-3 mr-5 pt-5">
                <label for="kkm" class="block text-text_sm font-medium">KKM</label>
                <input type="text" placeholder="Input nilai KKM" id="kkm" name="kkm" class="h-11 w-96 rounded-lg ring-gray-300 focus:ring-primary-600" required>
                <p id="helper-text-explanation" class="mt-0.5 text-text_sm text-gray-500 dark:text-gray-400">KKM berupa angka 0-100</p>
            </div>
            <div class="mb-3 mr-5 pt-5">
                <label for="durasi_jam" class="block text-text_sm font-medium">Durasi Jam</label>
                <input type="text" placeholder="Input total durasi jam belajar" class="h-11 w-96 rounded-lg ring-gray-300 focus:ring-primary-600" id="durasiJam" name="durasiJam" required>
            </div>
            <div class="pt-5 px-9 flex justify-end">
                <button type="submit" class="bg-primary-600 text-white text-text_md rounded-lg text-center inline-flex items-center px-5 py-3">
                    Tambah</button>
            </div>
        </div>
    </div>
</form>
